---
import { Image } from 'astro:assets';
import siteContent from '../data/siteContent.json';
import heroImage from '../assets/images/hero.png';
const { hero, personalInfo } = siteContent;
---

<section class="relative bg-gradient-to-br from-dark-navy to-gray-900 text-white overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32 lg:py-40">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column: Text Content -->
      <div class="max-w-4xl">
        <!-- Tagline -->
        <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-6">
          <span class="text-sm font-medium text-blue-300">{personalInfo.tagline}</span>
        </div>

        <!-- Main Title -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          {hero.title}
        </h1>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-gray-300 mb-10 max-w-3xl leading-relaxed">
          {hero.subtitle}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#servizi"
            class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-md text-white bg-accent-blue hover:bg-blue-600 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            {hero.ctaPrimary}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
          <a
            href="#contatti"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-white/30 text-base font-medium rounded-md text-white hover:bg-white/10 transition-all backdrop-blur-sm"
          >
            {hero.ctaSecondary}
          </a>
        </div>
      </div>

      <!-- Right Column: Hero Image -->
      <div class="relative lg:block">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <Image
            src={heroImage}
            alt={personalInfo.name}
            widths={[480, 768, 1024]}
            sizes="(min-width: 1024px) 50vw, 100vw"
            formats={['avif', 'webp']}
            quality={70}
            width={1792}
            height={2400}
            loading="eager"
            fetchpriority="high"
            decoding="async"
            class="w-full h-auto object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-dark-navy/40 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative gradient blur -->
  <div class="absolute top-1/2 right-0 -translate-y-1/2 w-96 h-96 bg-accent-blue/20 rounded-full filter blur-3xl pointer-events-none"></div>
</section>
