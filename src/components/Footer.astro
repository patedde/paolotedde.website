---
import siteContent from '../data/siteContent.json';
const { personalInfo } = siteContent;
const currentYear = new Date().getFullYear();
---

<footer class="bg-dark-navy text-gray-300 border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col gap-6">
    <!-- Top Row: Navigation Links -->
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
    <!-- Left: Main Links -->
    <div class="flex flex-wrap justify-center sm:justify-start gap-4 sm:gap-6 text-sm">
    <a href="#servizi" class="hover:text-white transition-colors">Servizi</a>
    <a href="#about" class="hover:text-white transition-colors">Chi Sono</a>
    <a href="#contatti" class="hover:text-white transition-colors">Contatti</a>
    </div>

<!-- Right: Legal Links -->
    <div class="flex flex-wrap justify-center sm:justify-end gap-4 sm:gap-6 text-sm">
    <a href="/privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a>
    <a href="/cookie-policy" class="hover:text-white transition-colors">Cookie Policy</a>
    <button id="cookie-settings-btn" class="hover:text-white transition-colors cursor-pointer">
    Impostazioni Cookie
    </button>
    </div>
    </div>
    <!-- Bottom Row: Copyright -->
    <div class="text-sm text-center md:text-left pt-4 border-t border-gray-800">

        <p>&copy; {currentYear} {personalInfo.name}. Tutti i diritti riservati.</p>
        <p class="text-gray-500 mt-1">{personalInfo.role}</p>
      </div>
    </div>
  </div>
</footer>

<script>
// Open cookie settings when clicking the button in footer
document.getElementById('cookie-settings-btn')?.addEventListener('click', () => {
const modal = document.getElementById('cookie-modal');
modal?.classList.remove('hidden');
});
</script>

