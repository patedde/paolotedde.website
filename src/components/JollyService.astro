---
import siteContent from '../data/siteContent.json';
const { jollyService } = siteContent;
---

<section class="bg-gray-50 py-12">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative rounded-2xl border-2 border-dashed border-gray-300 bg-white p-8 md:p-10 overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-yellow-100 to-orange-100 rounded-full filter blur-3xl opacity-30 -z-0"></div>

      <div class="relative z-10 flex flex-col md:flex-row items-center gap-6">
        <!-- Icon -->
        <div class="flex-shrink-0">
          <div class="w-16 h-16 flex items-center justify-center bg-yellow-100 rounded-xl">
            <svg class="w-8 h-8 text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
          </div>
        </div>

        <!-- Content -->
        <div class="flex-1 text-center md:text-left">
          <h3 class="text-2xl font-bold text-gray-900 mb-2">
            {jollyService.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {jollyService.description}
          </p>
        </div>

        <!-- CTA -->
        <div class="flex-shrink-0">
          <a
            href="#contatti"
            class="inline-flex items-center px-6 py-3 border-2 border-yellow-600 text-yellow-700 font-medium rounded-lg hover:bg-yellow-50 transition-colors"
          >
            Richiedi Audit
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
