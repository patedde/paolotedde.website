---
import siteContent from '../data/siteContent.json';
const { about, personalInfo } = siteContent;
---

<section id="about" class="bg-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="order-2 lg:order-1">
        <div class="relative">
          <div class="bg-gradient-to-br from-dark-navy to-gray-800 rounded-2xl p-12 text-white shadow-xl">
            <div class="space-y-6">
              
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-blue-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 11 3 3L22 4"/><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>
                </div>
                <div>
                  <div class="font-semibold">Microsoft</div>
                  <div class="text-sm text-gray-300">QA</div>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-blue-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                </div>
                <div>
                  <div class="font-semibold">SEGA</div>
                  <div class="text-sm text-gray-300">Localization</div>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-purple-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M9 3v18"/><path d="M15 9h6"/><path d="M15 14h6"/><path d="M3 9h6"/><path d="M3 14h6"/></svg>
                </div>
                <div>
                  <div class="font-semibold">Creative Assembly</div>
                  <div class="text-sm text-gray-300">Project Management</div>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-green-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" x2="12" y1="22.08" y2="12"/></svg>
                </div>
                <div>
                  <div class="font-semibold">XRIT</div>
                  <div class="text-sm text-gray-300">AR Development</div>
                </div>
              </div>

            </div>
          </div>

          <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent-blue/20 rounded-full filter blur-2xl -z-10"></div>
        </div>
      </div>

      <div class="order-1 lg:order-2">
        <div class="inline-flex items-center px-4 py-2 bg-gray-100 rounded-full mb-6">
          <span class="text-sm font-semibold text-gray-700">Chi Sono</span>
        </div>

        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
          {about.title}
        </h2>

        <div class="prose prose-lg text-gray-600 leading-relaxed">
          <p>{about.text}</p>
        </div>

        <div class="mt-8 flex flex-wrap gap-3">
          <span class="px-4 py-2 bg-blue-50 text-blue-700 rounded-lg text-sm font-medium">
            C# & Unity
          </span>
          <span class="px-4 py-2 bg-purple-50 text-purple-700 rounded-lg text-sm font-medium">
            AR Development
          </span>
          <span class="px-4 py-2 bg-green-50 text-green-700 rounded-lg text-sm font-medium">
            QA Expert
          </span>
          <span class="px-4 py-2 bg-orange-50 text-red-700 rounded-lg text-sm font-medium">
            Web Dev
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
